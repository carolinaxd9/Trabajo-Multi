@model Campaña
<div class="container">
    <div class="row">
        <div class="col-8">
            <h2>@Model.Nombre</h2>
             <div class="media">
                    <img class="mr-3" src="@Model.foto" style="width:28%"/>
                    <div class="media-body">
                    <p>@Model.informacion</p>
                </div>
            </div>
            <h4>Implementos a llevar</h4>
            <p>@Model.implementos</p>
            <form asp-action="RegistroCampana" method="post">
            <input type="hidden" name="cid" value="@Model.CampañaId"/>
            <div class="col-4">
                <div class="form-group">
                    <label>Monto a donar:</label>
                    <input class="form-control" name="monto"/>
                </div>
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me">Aceptar los terminos de Sostenibilidad Emprendedora
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
            </form>
        </div>
        <div class="col-3">
           <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img class="d-block" src="http://img.inforegion.pe.s3.amazonaws.com/wp-content/uploads/2011/06/07jun11-AFICHE-APAGA-TU-MOTOR-2.jpg" style="width:240px;height:500px" alt="First slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block" src="https://verdeseo.files.wordpress.com/2011/06/afiche-5-de-junio-final.jpg" style="width:240px;height:500px" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block" src="https://1.bp.blogspot.com/-Duw5_LlPKxI/V-qyVO7PDiI/AAAAAAAAMRU/mqKz4VdNZ1AnT17rIHPX1o4B9pyTqZDYACLcB/s1600/medio%2Bambiente-01.jpg" style="width:240px;height:500px"alt="Third slide">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>