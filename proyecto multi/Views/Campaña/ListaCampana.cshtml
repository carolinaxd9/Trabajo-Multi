@model List<Campaña> 
@{
    ViewData["Title"] = "Lista de Campañas";
}
<h2>Distrito</h2>
<div class="container">
    <div class="row">
        <div class="col-2" class="border">
            <div class="btn-group-vertical">
                <button type="button" class="btn btn-secondary">Lima</button>
                <button type="button" class="btn btn-secondary">Miraflores</button>
                <button type="button" class="btn btn-secondary">Surco</button>
                <button type="button" class="btn btn-secondary">Breña</button>
                <button type="button" class="btn btn-secondary">La Molina</button>
                <button type="button" class="btn btn-secondary">San Juan de Miraflores</button>
            </div>
        </div>
        <div class="col-6">
            @foreach(var c in Model){
            <div class="card w-90  mb-4">
                <div class="card-body">
                    <h5 class="card-title">@c.Nombre</h5>
                    <div class="media">
                        <img class="mr-3" src="@c.foto" style="width:28%"/>
                        <div class="media-body">
                            <p>@c.informacion</p>
                            <a asp-area="" asp-controller="Campaña" asp-action="RegistroCampana" asp-route-id="@c.CampañaId" class="btn btn-primary ">Inscribirse</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
        <div class="col-4">
           <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img class="d-block" src="http://img.inforegion.pe.s3.amazonaws.com/wp-content/uploads/2011/06/07jun11-AFICHE-APAGA-TU-MOTOR-2.jpg" style="width:240px;height:500px" alt="First slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block" src="https://verdeseo.files.wordpress.com/2011/06/afiche-5-de-junio-final.jpg" style="width:240px;height:500px" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block" src="https://1.bp.blogspot.com/-Duw5_LlPKxI/V-qyVO7PDiI/AAAAAAAAMRU/mqKz4VdNZ1AnT17rIHPX1o4B9pyTqZDYACLcB/s1600/medio%2Bambiente-01.jpg" style="width:240px;height:500px"alt="Third slide">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>