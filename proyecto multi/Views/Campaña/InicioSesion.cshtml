@model IniciarSesion
@Html.ValidationSummary()
@{
    ViewData["Title"] = "Inicio de Sesion";
}
<div class="container ">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6 text-center">
            <img src="http://www.decidetusestudios.sep.gob.mx/recursos/img/sesiones.png" class="mb-4"/>
