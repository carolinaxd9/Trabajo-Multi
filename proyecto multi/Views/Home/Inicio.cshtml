@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel"  class="carousel slide"  data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://fiaes.upmakeapps.com/wp-content/uploads/2015/10/AmbientalesThumb.jpg" alt="ASP.NET" class="img-responsive" style="width:100%; height: 500px;"/>
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="http://entrenos.eafit.edu.co/noticias/2015/abril/PublishingImages/campana-ambiental-ppal730.jpg" alt="Visual Studio" style="width:100%; height: 500px; class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="http://4.bp.blogspot.com/-V3oNyhZakDs/U-AP2FuTwiI/AAAAAAAAABQ/aZGqv5IAGkM/s1600/Ambiental-02.jpg" alt="Microsoft Azure" style="width:100%; height: 500px; class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
